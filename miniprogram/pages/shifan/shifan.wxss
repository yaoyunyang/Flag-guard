.topBar{
  height:140rpx;
  background-color: rgb(153, 187, 169);
  display: flex;
  flex-direction: row;
  padding:20rpx 51rpx 20rpx 51rpx;
  justify-content: space-between;
  align-items: center;
}
.topBar-item{
  width:110rpx;
  height:110rpx;

}
.topBar-item image{
  width:110rpx;
  height:110rpx;
}
.background{
  position:absolute;
  top:0px;
  bottom:0px;
  left:0px;
  width:100%;
  height:100%;
  z-index:-1;
}
.three_line{
  height: 219rpx;
  border-top: 1px solid #979797;
  border-bottom: 1px solid #979797;
  margin:20rpx 0 0 0;
  background: #ffff;
}
.fst_thrd{
  display:flex;
  flex-direction: row;
  height:73rpx;
  justify-content: space-between;
}
.second{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #979797;
  border-bottom: 1px solid #979797;
  height:73rpx;
  width:90%;
  margin-left: 5%;
}
.fst_thrd text{
  font-size: 23rpx;
  color: #000000;
  margin: 20rpx 0 0 50rpx;
}
.fst_thrd image{
  height:27rpx;
  width:15rpx;
  margin: 24rpx 20rpx 0 0;
}
.second image{
  height:27rpx;
  width:15rpx;
  margin: 24rpx -20rpx 0 0;
}
.second text{
  font-size: 23rpx;
  color: #000000;
  margin: 20rpx 0 0 12.5rpx;
}




/* 蒙版弹窗 */
.mask{
  width:100%;   
  height:100%;   
  top:0;   
  background:rgba(0, 0, 0, 0.5);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 1;   
  position: absolute; 
}
.content-container{
  position: absolute; 
  top:10%;
  left:6%;
  z-index: 2;  
  width:80%;
  height:80%;
  border-radius: 30rpx;
  padding: 15rpx 30rpx 0 30rpx;
  background: rgba(255,255,255,0.5);
  box-shadow: 0 2rpx 4rpx #000,
              0 1rpx 3rpx #463A3A inset;
}
.more_intro{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.two_text_part{
  height:55%;
  font-size:28rpx;
}
.scroll_{
  height:100%;
}
.title_form{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-weight: 500;
  font-size:40rpx;
}

.more_intro image{
  height:35%;
  width:100%;
  margin-bottom: 15rpx;
  border-radius: 30rpx;
  /* background-color: blue; */
}